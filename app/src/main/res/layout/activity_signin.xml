<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <!-- Sign In Title with better positioning -->
    <TextView
        android:id="@+id/sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- Username field with improved spacing -->
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="30dp"
        android:autofillHints="username"
        android:background="#30ffffff"
        android:drawableStart="@drawable/ic_baseline_person"
        android:drawablePadding="15dp"
        android:hint="Username"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

    <!-- Password field with consistent spacing -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:autofillHints="password"
        android:background="#30ffffff"
        android:drawableStart="@drawable/ic_baseline_password"
        android:drawablePadding="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

    <!-- Forgot Password option -->
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_alignEnd="@id/password"
        android:layout_marginTop="10dp"
        android:text="Forgot Password?"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <!-- Login button with better positioning -->
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_password"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/white"
        android:padding="12dp"
        android:text="Login"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Or sign in with text -->
    <TextView
        android:id="@+id/or_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Or sign in with"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <!-- Social media login options with better spacing -->
    <LinearLayout
        android:id="@+id/social_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/or_sign_in"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/google_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="15dp"
            android:contentDescription="google_desc"
            android:src="@drawable/google" />

        <ImageView
            android:id="@+id/instagram_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="15dp"
            android:contentDescription="instagram_desc"
            android:src="@drawable/instagram" />

        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="15dp"
            android:contentDescription="facebook_desc"
            android:src="@drawable/facebook" />
    </LinearLayout>

    <!-- Sign up option at bottom -->
    <TextView
        android:id="@+id/new_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="New user? Sign up here"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>